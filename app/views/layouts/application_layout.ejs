<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <%- stylesheet_link_tag('bootstrap', 'style', 'bootstrap-responsive', 'bootstrap-wysihtml5') %>
    <%- javascript_include_tag('http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js', 'bootstrap', 'rails', 'application', 'wysihtml5-0.3.0.min', 'bootstrap-wysihtml5') %>
    <%- csrf_meta_tag() %>
  </head>
  <body>
  
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="/">my cool new railway site</a>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <li>
              <%- link_to("posts", "/posts") %>
            </li>
            <li>
              <%- link_to("contact", "/contact") %>
            </li>
            <li>
              <%- link_to("about", "/about") %>
            </li>
          </ul>
          <ul class="nav pull-right">
            <li>
              <% if (!user) { %>
                <%- link_to("login", "/login") %>
              <% } else { %>
                <%- link_to("logout", "/logout") %>
              <% } %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  
  <div class="content-main">
    <div class="container">
      <% var flash = request.flash('info').pop(); if (flash) { %>
        <div class="row">
          <div class="alert alert-info">
            <a class="close" data-dismiss="alert">×</a>
              <%- flash %>
            </div>
        </div>
      <% } %>
      
      <% flash = request.flash('error').pop(); if (flash) { %>
        <div class="row">
          <div class="alert alert-error">
            <a class="close" data-dismiss="alert">×</a>
            <%- flash %>
          </div>
        </div>
      <% }; %>
      
      <%- body %>
      
      <hr />
      <footer>
        <p>&copy; mycompany 2012</p>
      </footer>
    </div>
  </div>
  
  </body>
</html>
