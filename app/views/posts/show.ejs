<div class="page-header">
    <h1><%= post.title %></h1>
</div>

<div class="row">
	<div class="span12">
		<%- post.content %>
	</div>
</div>

<hr />

<div class="row">
	<div class="span12">
		<h2>Comments</h2>
		<% if (comments.length > 0) { %>
			<% comments.forEach(function (comment) { %>
				<p><%- comment.userName %> said on <span class="pull-right"><%- comment.created_at %></span></p>
				<blockquote>
					<%- comment.content %>
				</blockquote>
			<% }); %>
		<% } else { %>
			<p class="alert alert-block alert-info">
				<strong>Be the first to leave a comment!</strong> 
			</p>
		<% } %>
		<% if (user && typeof(user.id ) !== null) { %>
			<% form_for(comment, {action: path_to.post_comments(post), method: 'POST', id: "comment_form", class: "form-horizontal"}, function (form) { %>
				<%- partial('comments/form.ejs', {locals: {form: form, comment: comment, post: post, user: user }}) %>
				<%- form.submit('Post Comment', {class: 'btn'}) %> 
			<% }); %>
		<% } %>
	</div>
</div>

