<%- errorMessagesFor(user) %>
<table class="table table-bordered table-striped">
	<caption><h4>Static Fields - Cannot be Edited</h4></caption>
	<tr>
		<th>Display Name</th>
		<td><%- member.displayName %></td>
	</tr><tr>
		<th>Email</th>
		<td><%- member.email %></td>
	</tr>
</table>

<div class="control-group">
   <%- form.label("roleId", false, {class: "control-label"}) %>
   <div class="controls">
			<select name="User[roleId]">
				<% roles.forEach(function (role) { %>
					<% var selected = (parseInt(role.id) === parseInt(member.roleId)) ? 'selected="selected"' : null; %>
					<option value="<%- role.id %>" <%- selected %>><%- role.name %></option>
				<% }); %>
			</select>
   </div>
</div>

